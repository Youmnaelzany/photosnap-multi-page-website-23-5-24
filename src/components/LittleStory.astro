  <div
    class="photoWrapper relative hover:-translate-y-8 hover:after:absolute hover:after:bottom-0 hover:after:h-[0.375rem] hover:after:w-[23.4375rem] md:max-2xl:hover:after:w-[22.5rem]"
  >
    <picture>
      <source
        media="(min-width:768px )"
        srcset="/images/stories/desktop/mountains.jpg"
      />
      <img
        src="/images/stories/mobile/mountains.jpg"
        alt="mountains"
        class=""
        id="theMountain"
      />
