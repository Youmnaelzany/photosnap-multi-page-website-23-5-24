<style>
  .cardWrapper {
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0) 0.27%,
      rgba(0, 0, 0, 0.66) 100%
    );
  }

  .heroSectionAfter::after {
    background: linear-gradient(
      27deg,
      #ffc593 0%,
      #bc7198 43.29%,
      #5a77ff 83.33%
    );
  }
</style>

<script is:inline>
  const monthlyBtn = document.getElementById("monthlyBtn");
  const yearlyBtn = document.getElementById("yearlyBtn");
  const monthlyPrice = document.getElementById("monthlyPrice");
  const yearlyPrice = document.getElementById("yearlyPrice");
  monthlyBtn.addEventListener("click", () => {
    yearlyPrice.classList.remove("hidden");
    monthlyPrice.classList.add("hidden");
    monthlyBtn.classList.add("hidden");
    yearlyBtn.classList.remove("hidden");
  });
  yearlyBtn.addEventListener("click", () => {
    yearlyPrice.classList.add("hidden");
    monthlyPrice.classList.remove("hidden");
    monthlyBtn.classList.remove("hidden");
    yearlyBtn.classList.add("hidden");
  });
</script>
